<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F5F5F5">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="32dp">

        <TextView
            android:id="@+id/tv_title_cadastro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cadastro"
            android:textSize="36sp"
            android:textStyle="bold"
            android:textColor="#673AB7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="48dp"/>

        <RadioGroup
            android:id="@+id/rg_tipo_cadastro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_title_cadastro"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <RadioButton
                android:id="@+id/rb_usuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Usuário"
                android:textSize="16sp"
                android:checked="true"
                android:layout_marginEnd="24dp"/>

            <RadioButton
                android:id="@+id/rb_organizacao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Organização"
                android:textSize="16sp"/>
        </RadioGroup>

        <FrameLayout
            android:id="@+id/form_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/rg_tipo_cadastro"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- USUÁRIO -->
            <LinearLayout
                android:id="@+id/layout_usuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="32dp"
                android:visibility="visible">

                <EditText
                    android:id="@+id/tbx_nome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/constraints_styles"
                    android:hint="Nome Completo"
                    android:inputType="textPersonName"
                    android:padding="14dp"
                    android:layout_marginBottom="16dp"/>

                <EditText
                    android:id="@+id/tbx_email_cadastro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/constraints_styles"
                    android:hint="E-mail"
                    android:inputType="textEmailAddress"
                    android:padding="14dp"
                    android:layout_marginBottom="16dp"/>

                <EditText
                    android:id="@+id/tbx_senha_cadastro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/constraints_styles"
                    android:hint="Senha"
                    android:inputType="textPassword"
                    android:padding="14dp"
                    android:layout_marginBottom="16dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">
                    <EditText
                        android:id="@+id/editIdPapel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/constraints_styles"
                        android:hint="ID Papel"
                        android:inputType="number"
                        android:padding="14dp"
                        android:layout_marginEnd="8dp"/>
                    <EditText
                        android:id="@+id/editIdOrganizacao"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/constraints_styles"
                        android:hint="ID Org"
                        android:inputType="number"
                        android:padding="14dp"
                        android:layout_marginStart="8dp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- ORGANIZAÇÃO -->
            <LinearLayout
                android:id="@+id/layout_organizacao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="32dp"
                android:visibility="gone">

                <EditText
                    android:id="@+id/et_org_nome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/constraints_styles"
                    android:hint="Nome da Organização"
                    android:inputType="text"
                    android:padding="14dp"
                    android:layout_marginBottom="16dp"/>

                <EditText
                    android:id="@+id/et_org_cnpj"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/constraints_styles"
                    android:hint="CNPJ (00.000.000/0000-00)"
                    android:inputType="number"
                    android:maxLength="18"
                    android:padding="14dp"
                    android:layout_marginBottom="16dp"/>

                <EditText
                    android:id="@+id/et_org_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/constraints_styles"
                    android:hint="E-mail Corporativo"
                    android:inputType="textEmailAddress"
                    android:padding="14dp"
                    android:layout_marginBottom="16dp"/>

                <EditText
                    android:id="@+id/et_org_telefone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/constraints_styles"
                    android:hint="Telefone (XX) XXXXX-XXXX"
                    android:inputType="phone"
                    android:padding="14dp"/>
            </LinearLayout>
        </FrameLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_cadastrar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:text="Cadastrar"
            android:textSize="16sp"
            android:padding="12dp"
            android:backgroundTint="#673AB7"
            app:cornerRadius="24dp"
            app:layout_constraintTop_toBottomOf="@+id/form_container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tv_voltar_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Já tem uma conta? Faça login"
            android:textColor="#673AB7"
            android:textSize="14sp"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintTop_toBottomOf="@+id/btn_cadastrar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>