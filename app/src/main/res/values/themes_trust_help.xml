<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Trust Help Light Theme -->
    <style name="Theme.TrustHelp" parent="Theme.Material3.DayNight">
        <!-- Primary Colors -->
        <item name="colorPrimary">@color/trust_help_primary</item>
        <item name="colorPrimaryVariant">@color/trust_help_primary_variant</item>
        <item name="colorOnPrimary">@color/trust_help_on_primary</item>
        
        <!-- Secondary Colors -->
        <item name="colorSecondary">@color/trust_help_secondary</item>
        <item name="colorSecondaryVariant">@color/trust_help_secondary_variant</item>
        <item name="colorOnSecondary">@color/trust_help_on_secondary</item>
        
        <!-- Surface Colors -->
        <item name="android:colorBackground">@color/trust_help_background</item>
        <item name="colorSurface">@color/trust_help_surface</item>
        <item name="colorOnBackground">@color/trust_help_on_background</item>
        <item name="colorOnSurface">@color/trust_help_on_surface</item>
        
        <!-- Status Bar -->
        <item name="android:statusBarColor">@color/trust_help_primary</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Action Bar -->
        <item name="actionBarStyle">@style/TrustHelp.ActionBar</item>
        
        <!-- Button Styles -->
        <item name="materialButtonStyle">@style/TrustHelp.Button</item>
        <item name="materialButtonOutlinedStyle">@style/TrustHelp.Button.Outlined</item>
        
        <!-- Text Input Layout -->
        <item name="textInputStyle">@style/TrustHelp.TextInputLayout</item>
        
        <!-- Card Style -->
        <item name="materialCardViewStyle">@style/TrustHelp.Card</item>
        
        <!-- Chip Style -->
        <item name="chipStyle">@style/TrustHelp.Chip</item>
        
        <!-- FloatingActionButton -->
        <item name="floatingActionButtonStyle">@style/TrustHelp.FloatingActionButton</item>
    </style>
    
    <!-- No Action Bar Theme -->
    <style name="Theme.TrustHelp.NoActionBar" parent="Theme.TrustHelp">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    
    <!-- Action Bar Style -->
    <style name="TrustHelp.ActionBar" parent="Widget.Material3.ActionBar.Solid">
        <item name="background">@color/trust_help_primary</item>
        <item name="titleTextColor">@color/trust_help_on_primary</item>
        <item name="subtitleTextColor">@color/trust_help_on_primary</item>
        <item name="elevation">4dp</item>
    </style>
    
    <!-- Button Styles -->
    <style name="TrustHelp.Button" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/button_primary</item>
        <item name="android:textColor">@color/button_text_primary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:minHeight">48dp</item>
    </style>
    
    <style name="TrustHelp.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/trust_help_primary</item>
        <item name="android:textColor">@color/trust_help_primary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:minHeight">48dp</item>
    </style>
    
    <style name="TrustHelp.Button.Secondary" parent="Widget.Material3.Button.TextButton">
        <item name="backgroundTint">@color/button_secondary</item>
        <item name="android:textColor">@color/button_text_secondary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:minHeight">48dp</item>
    </style>
    
    <!-- Text Input Layout Style -->
    <style name="TrustHelp.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/input_border_focused</item>
        <item name="boxBackgroundColor">@color/input_background</item>
        <item name="android:textColorHint">@color/input_hint</item>
        <item name="hintTextColor">@color/trust_help_primary</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
    </style>
    
    <!-- Card Style -->
    <style name="TrustHelp.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">2dp</item>
        <item name="cardMaxElevation">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>
    
    <!-- Chip Style -->
    <style name="TrustHelp.Chip" parent="Widget.Material3.Chip.Filter">
        <item name="chipBackgroundColor">@color/trust_help_surface</item>
        <item name="chipStrokeColor">@color/trust_help_primary</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="android:textColor">@color/trust_help_primary</item>
        <item name="chipCornerRadius">16dp</item>
    </style>
    
    <!-- FloatingActionButton Style -->
    <style name="TrustHelp.FloatingActionButton" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="backgroundTint">@color/trust_help_primary</item>
        <item name="tint">@color/trust_help_on_primary</item>
    </style>
    
    <!-- Dialog Style -->
    <style name="TrustHelp.Dialog" parent="ThemeOverlay.Material3.Dialog">
        <item name="colorPrimary">@color/trust_help_primary</item>
        <item name="android:windowBackground">@drawable/dialog_background</item>
    </style>
    
    <!-- Text Appearances -->
    <style name="TrustHelp.TextAppearance.Headline1" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textColor">@color/trust_help_on_background</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    
    <style name="TrustHelp.TextAppearance.Headline2" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textColor">@color/trust_help_on_background</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    
    <style name="TrustHelp.TextAppearance.Body1" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">@color/trust_help_on_surface</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    
    <style name="TrustHelp.TextAppearance.Body2" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/gray_600</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    
    <!-- Status Chip Styles -->
    <style name="TrustHelp.Chip.Status.Aberto">
        <item name="chipBackgroundColor">@color/status_aberto</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    
    <style name="TrustHelp.Chip.Status.EmAndamento">
        <item name="chipBackgroundColor">@color/status_em_andamento</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    
    <style name="TrustHelp.Chip.Status.Pendente">
        <item name="chipBackgroundColor">@color/status_pendente</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    
    <style name="TrustHelp.Chip.Status.Resolvido">
        <item name="chipBackgroundColor">@color/status_resolvido</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    
    <style name="TrustHelp.Chip.Status.Fechado">
        <item name="chipBackgroundColor">@color/status_fechado</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    
    <style name="TrustHelp.Chip.Status.Cancelado">
        <item name="chipBackgroundColor">@color/status_cancelado</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    
</resources>